## Startup daemons and softwares
exec --no-startup-id nm-applet
exec --no-startup-id dropbox start
exec --no-startup-id feh --bg-scale --randomize ~/Pictures/wallpapers/*

## bindings
bindsym $mod+shift+w exec softWork
bindsym $mod+Control+l exec i3lock

## Workspace assignements
workspace_layout tabbed
set $1 "1:Web" 
set $2 "2:Terminal"  
set $3 "4:Com"  
set $4 "5:Misc"  
set $5 "3:Work"  

## Windows binding
set $mainWindow "LVDS-0"
set $secondWindow "VGA-0"
exec xrandr --output $mainWindow --mode 1600x900
exec xrandr --output $secondWindow --auto --left-of $mainWindow

workspace $1 output $mainWindow
workspace $2 output $mainWindow
workspace $3 output $mainWindow
workspace $4 output $mainWindow
workspace $5 output $secondWindow

assign [class="^Firefox$"] →  $1 
assign [class="^chromium$"] →  $1 
assign [class="gnome-terminal"] →  $2 
assign [instance="^HipChat$"] →  $3
assign [class="^Thunderbird$"] →  $3
assign [class="Genymotion"] →  $4
assign [class="^jetbrains-idea$"] →  $5 
assign [class="^jetbrains-android-studio$"] →  $5

## Layout & design setting
hide_edge_borders both
focus_follows_mouse yes
workspace_auto_back_and_forth yes

