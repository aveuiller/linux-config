###Â Environment Vars:
gitlabBaseDir="$HOME/Documents/work/dev/apisense"

## Projects
function workdir {
    # $1 - project directory
    echo $gitlabBaseDir"/"$1
}

export HIVE_DIR=`workdir "servers/hive"`
export HONEY_DIR=`workdir "servers/honeycomb"`
export DASH_DIR=`workdir "servers/dashboard"`
export SDK_DIR=`workdir "sdk/apisense-android-sdk"`
export BEE_DIR=`workdir "app/bee-android"`
export DOC_DIR=`workdir "doc/docs.apisense.com"`
export PRES_DIR="$HOME/Documents/work/writing/SED/presentations/adt-crowdlab-presentation"
export SERV_DIR="$HOME/Documents/work/adminsys/servers-deployment"

## Less coloration
export LESS='-R'
export LESSOPEN='|~/.lessfilter %s'

export SOFTDIR="$HOME/Software"
export IDEDIR="$SOFTDIR/IDE"
export ENVDIR="$HOME/.env"
# See: http://tools.android.com/knownissues/ibus
export XMODIFIERS="~/Softwares/IDE/android-studio/bin/studio.sh"

# Homes
export JAVA_OPTS="-XX:+CMSClassUnloadingEnabled -XX:MaxMetaspaceSize=2G -XX:MetaspaceSize=1G -Xms1G -Xmx2G"
export JAVA_HOME="/usr/lib/jvm/default"
export ANDROID_HOME="$SOFTDIR/Android-SDK"
export SCALA_HOME="$SOFTDIR/scala/default-scala"

# Path
export PATH="$PATH:$ENVDIR/bin"
export PATH="$PATH:$JAVA_HOME/bin"
export PATH="$PATH:$ANDROID_HOME/platform-tools"

# Virtualenv wrapper (require python-virtualenvwrapper)
export WORKON_HOME=~/.virtualenvs
source /usr/bin/virtualenvwrapper.sh

# firefox profiles
alias ffPerso="firefox -p personal -no-remote"

# Work env setup aliases
alias android-studio="$IDEDIR/android-studio/bin/studio.sh"
alias intellij="$IDEDIR/intellij/bin/idea.sh"
alias pycharm="$IDEDIR/pycharm/bin/pycharm.sh"
alias softWork="firefox & chromium & intellij & genymotion & thunderbird & slack &"
function _work_dev {
    # $1 - project absolute directory
    cd $1 && git status
}
alias hive="_work_dev $HIVE_DIR"
alias honeycomb="_work_dev $HONEY_DIR"
alias dash="_work_dev $DASH_DIR"
alias sdk="_work_dev $SDK_DIR"
alias bee="_work_dev $BEE_DIR"
alias doc="_work_dev $DOC_DIR"
alias servers="_work_dev $SERV_DIR"
alias work="cd $gitlabBaseDir && gws"
alias prez="cd $PRES_DIR"

### Aliase:
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
alias gds='gd --staged'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Other initializers inclusion
source $(dirname $0)/jenv.init
